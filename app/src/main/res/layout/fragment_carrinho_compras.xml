<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarrinhoCompras">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/toolbarBarColor"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Carrinho De Compras" />

    <View
        android:id="@+id/divider"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:layout_below="@id/toolbar" />

    <TextView
        android:id="@+id/levantarLojaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Levantar na Loja?"
        android:textSize="25sp"
        android:textStyle="bold">
    </TextView>

    <RadioGroup
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/levantarLojaTitle"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sim"/>
        <RadioButton android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não"/>
    </RadioGroup>

    <TextView
        android:id="@+id/reservaDescTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radioButton"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Descrição: "
        android:textSize="25sp"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:id="@+id/reservaDesc"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_below="@id/reservaDescTitle"
        android:inputType="text|textMultiLine"
        android:hint="Escreva Algo...">
    </EditText>

    <TextView
        android:id="@+id/reservaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reservaDesc"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Data: "
        android:textSize="25sp"
        android:textStyle="bold">
    </TextView>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@id/reservaData"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_centerHorizontal="true">
    </DatePicker>

    <TextView
        android:id="@+id/priceTotalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/datePicker"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Preço Total: "
        android:textSize="25sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/priceTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceTotalTitle"
        android:layout_centerHorizontal="true"
        android:text="xxx euros"
        android:textSize="20sp">
    </TextView>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceTotal"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Confirmar Reserva">
    </Button>


</RelativeLayout>