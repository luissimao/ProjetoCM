<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/toolbarBarColor"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Menu Admin" />

    <View
        android:id="@+id/divider"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"/>

    <Button
        android:id="@+id/messengerButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Mensagens"
        app:layout_constraintBottom_toTopOf="@+id/reservasButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reservasButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Reservas"
        app:layout_constraintBottom_toTopOf="@+id/contactosButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/contactosButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Contactos"
        app:layout_constraintBottom_toTopOf="@+id/produtosButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/produtosButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Produtos"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>